<?xml version="1.0" encoding="UTF-8"?>

<beans  
    xmlns="http://www.springframework.org/schema/beans"  
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"  
    xmlns:p="http://www.springframework.org/schema/p"  
    xsi:schemaLocation="http://www.springframework.org/schema/beans  
               http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">  
               
         
        <!-- Setter Dependency Injection --> 
       <bean id = "studentbean" class="com.simplilearn.spring.spring_project.Student">
       		<property name="name" value="James Bond"></property>
       </bean>
       
       <!-- Constructor Dependency Injection -->
       <bean id="employeebean" class="com.simplilearn.spring.spring_project.Employee">
       <constructor-arg value="10" type="int"></constructor-arg>
       <constructor-arg value="John Wood"></constructor-arg>
       <constructor-arg>
       		<ref bean="addressbean" />
       </constructor-arg>
       </bean>
       
       <bean id="addressbean" class="com.simplilearn.spring.spring_project.Address">
       		<constructor-arg value="NOIDA"></constructor-arg>
       		<constructor-arg value="UP"></constructor-arg>
       		<constructor-arg value="INDIA"></constructor-arg>
       </bean>
       
               
 </beans>